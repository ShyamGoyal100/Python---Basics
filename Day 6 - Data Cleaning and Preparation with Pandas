# Exercise : Clean a Dataset by handling Missing Values and Renaming Columns

import pandas as pd
import numpy as np
data = {
    "Name" : ["Alice","Bob",np.nan,"David"],
    "Age" : [25,np.nan, 30,35],
    "Score": [85,90,np.nan,88],
}
df1 = pd.DataFrame(data)
print("Original Dataset : \n",df1)
df1["Age"] = df1["Age"].fillna(df1["Age"].mean())

# Exercise : Merge two Datasets and perform Data Transformation

df1 = pd.DataFrame({
    "ID":[1,2,3],
    "Name ":["Alice","Bob","Charlie"],
    "Age":[25,30,35],
})

df2 = pd.DataFrame({
    "ID":[1,2,3],
    "Score":[85,90,80],
})

print("Dataset 1 : \n",df1)
print("Dataset 2 : \n",df2)

merged = pd.merge(df1, df2, how="inner",on="ID")
print("Merged Dataset : \n",merged)
merged["Score_Percentage"] = (merged["Score"]/100)*100
print("Transformed Dataset \n", merged)

