# Filling Missing Values
df = df.dropna() # Drops entire rows with missing values at specific rows
df = df.dropna(axis = 1) # Drops Columns with missing values
df["sepal_length"] = df["sepal_length"].fillna(0) # Fill missing cells in columns with 0

# Types of fills : Forward and backward fill
df.fillna(method="ffill") # Forward Fill
df.fillna(method="bfill") # Backward Fill

# Interpolation
df["sepal_length"] = df["sepal_length"].interpolate() # Fills the data as per the reference to othe columns



# Data Transformation
import pandas as pd
# Renaming Columns
df = df.rename(columns={"old_name":"new_name"}) # Renaming Columns

# Changing Data Types
df["sepal_length"] = df["sepal_length"].astype("float") # Change Data Type to Float
