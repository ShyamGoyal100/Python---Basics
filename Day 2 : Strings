# Concatination
first = "Hello"
last = "World"
result = first +" "+last # Concatination
print(result)

# Slicing
text = "Python Programming"
print(text[0:6]) # Slicing
print(text[-11:]) # Slicing

# Fromatting
name = "Shyam"
Age = 30
print(f"My name is {name}, and I am {Age} years old")

